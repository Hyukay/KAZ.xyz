---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
---

<PageLayout title="Technical reports" description="Explore my technical reports.">
  <Container>
    <h4 class="font-semibold text-black dark:text-white mb-4">Technical reports</h4>
    <p class="mb-6">
      Below you can access my technical reports for the REverse Marketplace and the PFE project
    </p>
    <div class="space-y-6">
      <div>
        <h5 class="font-medium mb-2">Reverse - A peer to peer marketplace for real estate</h5>
        <div class="pdf-container border border-gray-200 dark:border-gray-700 rounded-md">
          <iframe 
            src="/reports/MGL850_Rapport_REverse.pdf"
            width="100%"
            height="500px"
            style="border: none;"
          ></iframe>
        </div>
      </div>
      
      <div>
        <h5 class="font-medium mb-2">Conception and implementation of a microservices architecture for stock price prediction system</h5>
        <div class="pdf-container border border-gray-200 dark:border-gray-700 rounded-md">
          <iframe 
            src="/reports/PFE020_Rapport_technique_FINAL.pdf"
            width="100%"
            height="500px"
            style="border: none;"
          ></iframe>
        </div>
      </div>
    </div>
    </ul>
  </Container>
</PageLayout>

<style>
  .pdf-container {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
    overflow: hidden;
  }

  iframe {
    width: 100%;
    height: 100vh;
    display: block;
    margin: 0;
  }
</style>